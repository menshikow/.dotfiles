{
  // editor Core
  "editor.fontSize": 16,
  "editor.fontFamily": "JetBrainsMono Nerd Font Mono",
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.formatOnSave": true,
  "editor.lineNumbers": "relative",
  "editor.cursorBlinking": "solid",
  "editor.minimap.enabled": false,
  "editor.stickyScroll.enabled": false,
  "editor.renderWhitespace": "none",
  "editor.renderLineHighlight": "none",
  "editor.scrollbar.horizontal": "hidden",

  // auto-completion (disabled)
  "editor.autoClosingBrackets": "never",
  "editor.autoClosingQuotes": "never",
  "editor.autoSurround": "never",
  "editor.autoClosingDelete": "never",
  "editor.autoClosingOvertype": "never",

  // javaScript/typeScript
  "[javascript][typescript][typescriptreact][json][jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },

  // c/c++
  "[c][cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.tabSize": 2
  },
  "C_Cpp.errorSquiggles": "enabled",
  "C_Cpp.intelliSenseEngine": "default",
  "C_Cpp.inlayHints.parameterNames.enabled": true,
  "C_Cpp.inlayHints.referenceOperator.enabled": true,
  "C_Cpp.dimInactiveRegions": true,
  "C_Cpp.clang_format_style": "LLVM",

  // python
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--line-length", "88"],
  "python.linting.enabled": true,
  "python.linting.mypyEnabled": true,
  "python.linting.ruffEnabled": true,
  "python.analysis.typeCheckingMode": "standard",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.inlayHints.variableTypes": true,
  "python.analysis.inlayHints.functionReturnTypes": true,

  // go
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },
  "go.formatTool": "gofmt",
  "go.lintTool": "golangci-lint",
  "go.useLanguageServer": true,
  "gopls": {
    "ui.diagnostic.staticcheck": true,
    "ui.semanticTokens": true
  },

  // rust
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "rust-analyzer.checkOnSave.command": "clippy",
  "rust-analyzer.inlayHints.enable": true,

  // sql
  "[sql]": {
    "editor.defaultFormatter": "adpyke.vscode-sql-formatter"
  },

  // git
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "never",

  // workbench
  "workbench.startupEditor": "none",
  "workbench.sideBar.location": "right",
  "workbench.colorTheme": "Poimandres Alternate",
  "workbench.editor.editorActionsLocation": "titleBar",
  "breadcrumbs.enabled": false,

  // extensions
  "github.copilot.editor.enableCodeActions": false,
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },

  // theme 
  "workbench.colorCustomizations": {
    "[Vira*]": {
      "statusBar.debuggingBackground": "#80CBC433",
      "statusBar.debuggingForeground": "#80CBC4",
      "button.background": "#80CBC4",
      "button.foreground": "#000000",
      "activityBarBadge.background": "#80CBC4",
      "activityBarBadge.foreground": "#000000",
      "activityBar.activeBorder": "#80CBC4",
      "list.highlightForeground": "#80CBC4",
      "tab.activeBorder": "#80CBC4",
      "progressBar.background": "#80CBC4",
      "panelTitle.activeBorder": "#80CBC4",
      "editor.findMatchBorder": "#80CBC4",
      "selection.background": "#80CBC440"
    }
  }
}
